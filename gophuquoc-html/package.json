  "main": "index.js",
  "scripts": {
    "scss": "node-sass --output-style compressed -o src/dist/css src/scss --watch",
    "serve": "browser-sync start --server --files 'src/dist/css/*.css, **/*.html'",
    "watch:css": "onchange 'src/scss' -- npm run scss", 
    "start": "npm run serve watch:css"
